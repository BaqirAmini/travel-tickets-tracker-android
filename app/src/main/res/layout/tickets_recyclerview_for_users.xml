<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout 
xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="390dp"
        android:layout_height="230dp"
        app:cardCornerRadius="25dp"
        android:layout_margin="10dp"
       android:backgroundTint="@color/blue"
        android:layout_marginStart="1dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <TextView
               android:id="@+id/txt_from_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="68dp"
               android:layout_marginTop="16dp"
               android:text="@string/from"
               android:textColor="@color/white"
               android:textSize="20sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <TextView
               android:id="@+id/txt_price_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="19dp"
               android:layout_marginEnd="52dp"
               android:text="ticket price"
               android:textColor="@color/white"
               android:textSize="20sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_to_val" />

           <TextView
               android:id="@+id/txt_from_ddatetime"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="44dp"
               android:text="1:00 PM"
               android:textColor="@color/white"
               android:textSize="15sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_from_dep_lbl" />

           <TextView
               android:id="@+id/txt_price_amount"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="44dp"
               android:text="800 AFN"
               android:textColor="@color/white"
               android:textSize="18sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_price_lbl" />

           <TextView
               android:id="@+id/txt_from_dep_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="53dp"
               android:layout_marginTop="19dp"
               android:text="departure"
               android:textColor="@color/white"
               android:textSize="18sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_from_val" />

           <TextView
               android:id="@+id/txt_from_val"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="52dp"
               android:text="Kabul"
               android:textColor="@color/white"
               android:textSize="20sp"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_from_lbl" />

           <TextView
               android:id="@+id/txt_to_val"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginEnd="68dp"
               android:text="Belkh"
               android:textColor="@color/white"
               android:textSize="20sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_to_lbl" />

           <TextView
               android:id="@+id/txt_to_lbl"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="16dp"
               android:layout_marginEnd="96dp"
               android:text="@string/to"
               android:textColor="@color/white"
               android:textSize="20sp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent" />

           <Button
               android:id="@+id/btn_book_by_user"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginTop="10dp"
               android:layout_marginEnd="138dp"
               android:text="@string/booknow"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toBottomOf="@+id/txt_from_ddatetime" />


       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>